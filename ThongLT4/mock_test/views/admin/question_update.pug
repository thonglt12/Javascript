extends common
block content
    .container.mt5

        if errors 
            each error in errors
                .alert.alert-danger=error
    form(action="" method="POST")
        .form-group.mb-3
            label.form-label() Question 
            input.form-control(type='text', name="question",
            value = question.question)
        -for (var i = 0; i < 4; i++)
            .form-group.mb-3
                label.form-label() Answer #{(i+1)}
                input.form-control(type='text', name="answer"+(i+1),
                value= question.answersMap[i].answer)
            if question.answersMap[i].is_correct === "1"
                // checkbox is answer correct
                .mb-3.form-check
                    input.form-check-input(type='checkbox',
                    name="correct"+(i+1), checked="true")
                    label.form-check-label() Answer #{i+1} is correct
            else 
                // checkbox is answer correct
                .mb-3.form-check
                    input.form-check-input(type='checkbox', name="correct"+(i+1),)
                    label.form-check-label() Answer #{i+1} is correct

        button.btn.btn-primary FINISH