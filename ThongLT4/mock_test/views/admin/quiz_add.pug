extends common
block content
    .container.mt5
        
        if errors 
            each error in errors
                .alert.alert-danger=error

    form(action="/admin/quiz/add", method="POST", enctype="multipart/form-data")
            .form-group.mb-3
                label.form-label(for='Title') Title
                input#Title.form-control(type='text',  name="title",
                value = values ? values.title : "")
            .form-group.mb-3
                label.form-label(for='Description') Description
                input#Description.form-control(type='text', name="description", 
                value= values? values.description : "")
            .form-group.mb-3
                label.form-label(for='Totalquestions') Total questions
                input#Totalquestions.form-control(type='number',  name="total",
                value = values ? values.total : "")
            .form-group.mb-3
                label.form-label(for="avatar") Avatar
                input#avatar.form-control-file(type="file", name="avatar", accept="image/*")
            button.btn.btn-primary ADD 