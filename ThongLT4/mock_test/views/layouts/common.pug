htm 
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",
            rel="stylesheet", 
            )
       
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href='/') Quiz
                    if isLogin == true
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0.justify-content-md-end
                            li.nav-item
                                a.nav-link.active(aria-current='page', href='/quiz') Hi #{user.name}
                        
                        button.btn.btn-outline-success.my-2.my-sm-0(type="button" data-bs-toggle="modal" data-bs-target="#logoutModal") Logout
                    else
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link.active(aria-current='page', href='/user/register') Register
                            li.nav-item
                                a.nav-link.active(aria-current='page', href='/user/login') Login

        .container.pt-5
            block content 

        #logoutModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        h5#exampleModalLabel.modal-title Logout
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                        | Are you sure?
                    .modal-footer
                        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') No
                        button.btn.btn-danger(type='button' id="btn-logout") Yes
        
        script.
            var quizId;
            var logoutModal = document.getElementById('logoutModal');

            var logoutBtn = document.getElementById('btn-logout')

            logoutBtn.onclick = ()=>{
                var cookieTemp = document.cookie;
                document.cookie = cookieTemp+"; expires=Thu, 01 Jan 1970 00:00:00 UTC;";
                window.location.href = "http://localhost:3000";
            }