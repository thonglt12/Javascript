extends ../layouts/common
block content
    .row.row-mt-2
        each quiz in quizes
            if userQuizId.includes(quiz.id)
                .col-sm-6.colmd4.col-lg-3
                    .card(style='width: 16rem;')
                        img.card-img-top(src= quiz.avatar)
                        .card-body
                            h5.card-title #{quiz.title}
                            p.card-text #{quiz.description}
                            p.card-text Score: 
                                span.text-danger 
                                    |#{userScore[userQuizId.indexOf(quiz.id)]} / #{quiz.total}
                            .btn-group.me-md-3
                                a.btn.btn-warning(href='/quiz/'+quiz.id) Restart
                            .btn-group.me-md-3
                                a.btn.btn-success.ml-2(href='/quiz/'+quiz.id+'/review') Review
            else 
                .col-sm-6.colmd4.col-lg-3
                    .card(style='width: 16rem;')
                        img.card-img-top(src= quiz.avatar)
                        .card-body
                            h5.card-title #{quiz.title}
                            p.card-text #{quiz.description}
                            a.btn.btn-primary(href='/quiz/'+quiz.id) Start